<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#403F3F"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
           >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tools_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/tools_btn_white"
                />
        </RelativeLayout>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/autoHudSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autoHud"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:checked="false"
            android:layout_marginTop="10dp"

            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/analogSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/analog"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:checked="false"
            android:layout_marginTop="10dp"

            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/mlSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ml"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:checked="false"
            android:layout_marginTop="10dp"

            />

            <Button
                android:id="@+id/hud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:text="@string/hud"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_margin="10dp"
                />



</LinearLayout>